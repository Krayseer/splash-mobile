<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_50"
        android:paddingTop="16dp">

        <androidx.cardview.widget.CardView style="@style/InfoCard"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/account"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/profile.avatar.logo.content"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="2dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/userNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/editProfileTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile.change"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile.notification.header"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/myNotificationsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/profile.notification.self"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/notificationSettingsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/profile.notification.settings"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile.management.header"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/comp_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/profile.management.comp_info"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/employees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/profile.management.employees"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:id="@+id/report_button"
                    style="@style/PrimaryButton"
                    android:text="@string/profile.report.generate"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>